\usepackage{luacode,luatexbase}

%% Lua-side code
\begin{luacode}
function ktrf ( buff )
return buff
end
\end{luacode}

%% TeX-side code
\newcommand\ktrfOn{\directlua{luatexbase.add_to_callback ( "process_input_buffer" , ktrf , "ktrf" )}}
\newcommand\ktrfOff{\directlua{luatexbase.remove_fr\AtBeginDocument{\ktrfOn} % turn Lua function on by default